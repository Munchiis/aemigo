{
    "manifest_version": 3,
    "name": "AEMigo",
    "version": "1.0.0",
    "description": "A productivity tool for AEM developers",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "activeTab",
        "tabGroups"
    ],
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "icons/aemigo-16.png",
            "32": "icons/aemigo-32.png",
            "48": "icons/aemigo-48.png",
            "128": "icons/aemigo-128.png"
        },
        "default_title": "AEMigo - AEM Developer Companion"
    },
    "icons": {
        "16": "icons/aemigo-16.png",
        "32": "icons/aemigo-32.png",
        "48": "icons/aemigo-48.png",
        "128": "icons/aemigo-128.png"
    },
    "options_page": "src/options.html",
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}